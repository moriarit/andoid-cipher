<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_ceasar"
        android:layout_width="151dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FF2BAE66"
        android:text="Ceasar Cipher"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_atbash"
        android:layout_width="151dp"
        android:layout_height="180dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FF2BAE66"
        android:text="ATBASH CIPHER"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_vignere"
        android:layout_width="151dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="284dp"
        android:backgroundTint="#FF2BAE66"
        android:text="VIGNERE CIPHER"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_rail"
        android:layout_width="151dp"
        android:layout_height="180dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="284dp"
        android:backgroundTint="#FF2BAE66"
        android:text="Rail Fence Cipher"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>